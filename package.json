{
  "name": "avalon-engine",
  "version": "0.3.1",
  "description": "This is an engine for playing the popular \"The Resistance: Avalon\" game.",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "build": "tsc",
    "docs": "typedoc --out ./docs/ ./src/ --name \"Avalon Engine\"; cp jekyll.config.yml ./docs/_config.yml; touch ./docs/.nojekyll",
    "prepare": "husky",
    "prepublishOnly": "npm test",
    "format": "prettier --write .",
    "format:staged": "pretty-quick --staged",
    "lint": "eslint ."
  },
  "author": "Alex Lomia <alexlom95@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21",
    "typestate": "^1.0.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexLomm/avalon-engine.git"
  },
  "homepage": "https://github.com/AlexLomm/avalon-engine",
  "bugs": "https://github.com/AlexLomm/avalon-engine/issues",
  "keywords": [
    "avalon",
    "avalon node",
    "avalon engine",
    "resistance avalon"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3"
  }
}
